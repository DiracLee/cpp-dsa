{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "command": "gcc",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/build/${fileBasenameNoExtension}.exe",
                "-O0",
                "-ggdb3",
                "-Wall",
                "-finput-charset=UTF-8",
                "-lstdc++"
            ]
        }
    ],
    "type": "shell",
}